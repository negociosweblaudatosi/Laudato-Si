<div class="container p-4">
    <div class="row">
        {{#each articles}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <a target="_blank">
                        <h3 class="card-title text-uppercase">
                            {{titulo}}
                        </h3>
                    </a>
                    <p class="m-2">{{articuloEscrito}}</p>
                    <p class="text-muted">
                        {{timeago created_at}}
                    </p>

                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No tienes articulos guardados todavia.</p>
                <a href="/articles/add">Crear Uno!</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>